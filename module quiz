import { useState } from "react";
import { Link, useParams, useLocation } from "wouter";
import { useQuery, useMutation } from "@tanstack/react-query";
import { 
  ArrowRight, 
  ArrowLeft,
  CheckCircle,
  HelpCircle,
  Clock,
  Loader2
} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { Progress } from "@/components/ui/progress";
import { RadioGroup, RadioGroupItem } from "@/components/ui/radio-group";
import { Label } from "@/components/ui/label";
import { Skeleton } from "@/components/ui/skeleton";
import { apiRequest, queryClient } from "@/lib/queryClient";

interface QuizQuestion {
  id: string;
  moduleId: string;
  question: string;
  options: string[];
  order: number;
}

interface QuizResult {
  moduleId: string;
  score: number;
  totalQuestions: number;
  correctAnswers: number;
  xpEarned: number;
  passed: boolean;
  badgeUnlocked?: { id: string; name: string; description: string };
  results: Array<{
    questionId: string;
    correct: boolean;
    selectedAnswer: number;
    correctAnswer: number;
    explanation: string;
  }>;
}

export default function ModuleQuiz() {
  const { id } = useParams<{ id: string }>();
  const [, setLocation] = useLocation();
  
  const [currentQuestion, setCurrentQuestion] = useState(0);
  const [selectedAnswer, setSelectedAnswer] = useState<number | null>(null);
  const [answers, setAnswers] = useState<{ questionId: string; selectedAnswer: number }[]>([]);

  const { data: questions, isLoading, error } = useQuery<QuizQuestion[]>({
    queryKey: ["/api/modules", id, "quiz"],
    queryFn: async () => {
      const res = await fetch(`/api/modules/${id}/quiz`);
      if (!res.ok) throw new Error("Failed to fetch quiz");
      return res.json();
    },
    enabled: !!id
  });

  const submitQuizMutation = useMutation({
    mutationFn: async (quizAnswers: { questionId: string; selectedAnswer: number }[]) => {
      const res = await apiRequest("POST", `/api/modules/${id}/quiz/submit`, { answers: quizAnswers });
      return res.json() as Promise<QuizResult>;
    },
    onSuccess: (result) => {
      queryClient.invalidateQueries({ queryKey: ["/api/modules"] });
      queryClient.invalidateQueries({ queryKey: ["/api/stats"] });
      queryClient.invalidateQueries({ queryKey: ["/api/progress"] });
      queryClient.invalidateQueries({ queryKey: ["/api/badges"] });
      
      const resultParam = encodeURIComponent(JSON.stringify(result));
      setLocation(`/module/${id}/results?result=${resultParam}`);
    }
  });

  if (isLoading) {
    return (
      <div className="min-h-screen bg-background">
        <div className="sticky top-0 z-40 bg-background border-b">
          <div className="container mx-auto px-4 py-3">
            <div className="flex items-center justify-between gap-4">
              <Skeleton className="h-8 w-24" />
              <Skeleton className="h-4 w-64" />
              <Skeleton className="h-8 w-24" />
            </div>
          </div>
        </div>
        <div className="container mx-auto px-4 py-8">
          <div className="max-w-2xl mx-auto">
            <Card>
              <CardHeader>
                <Skeleton className="h-6 w-32 mb-4" />
                <Skeleton className="h-8 w-full" />
              </CardHeader>
              <CardContent>
                {Array.from({ length: 4 }).map((_, i) => (
                  <Skeleton key={i} className="h-14 w-full mb-3" />
                ))}
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    );
  }

  if (error || !questions || questions.length === 0) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <Card className="p-8 text-center">
          <CardTitle className="mb-4">Quiz Not Available</CardTitle>
          <CardDescription className="mb-6">
            This module doesn't have a quiz yet or couldn't be loaded.
          </CardDescription>
          <Link href="/modules">
            <Button>Back to Modules</Button>
          </Link>
        </Card>
      </div>
    );
  }

  const question = questions[currentQuestion];
  const progress = ((currentQuestion + 1) / questions.length) * 100;
  const isLastQuestion = currentQuestion === questions.length - 1;

  const handleNext = () => {
    if (selectedAnswer === null) return;

    const newAnswers = [
      ...answers,
      { questionId: question.id, selectedAnswer }
    ];
    setAnswers(newAnswers);

    if (isLastQuestion) {
      submitQuizMutation.mutate(newAnswers);
    } else {
      setCurrentQuestion(prev => prev + 1);
      setSelectedAnswer(null);
    }
  };

  const handlePrevious = () => {
    if (currentQuestion > 0) {
      setCurrentQuestion(prev => prev - 1);
      const prevAnswer = answers[currentQuestion - 1];
      setSelectedAnswer(prevAnswer?.selectedAnswer ?? null);
      setAnswers(prev => prev.slice(0, -1));
    }
  };

  return (
    <div className="min-h-screen bg-background">
      {/* Progress Header */}
      <div className="sticky top-0 z-40 bg-background border-b">
        <div className="container mx-auto px-4 py-3">
          <div className="flex items-center justify-between gap-4">
            <Link href={`/module/${id}/lesson`}>
              <Button variant="ghost" size="sm" className="gap-2" data-testid="button-back-to-lesson">
                <ArrowLeft className="h-4 w-4" />
                <span className="hidden sm:inline">Lesson</span>
              </Button>
            </Link>
            
            <div className="flex-1 max-w-md">
              <div className="flex justify-between text-sm mb-1">
                <span className="text-muted-foreground">Question {currentQuestion + 1} of {questions.length}</span>
                <span className="font-medium">{Math.round(progress)}%</span>
              </div>
              <Progress value={progress} className="h-2" />
            </div>

            <div className="flex items-center gap-2 text-muted-foreground">
              <Clock className="h-4 w-4" />
              <span className="text-sm">~2 min</span>
            </div>
          </div>
        </div>
      </div>

      <div className="container mx-auto px-4 py-8">
        <div className="max-w-2xl mx-auto">
          {/* Question Card */}
          <Card className="mb-8">
            <CardHeader>
              <div className="flex items-center gap-2 text-sm text-muted-foreground mb-2">
                <HelpCircle className="h-4 w-4" />
                <span>Multiple Choice</span>
              </div>
              <CardTitle className="text-xl md:text-2xl leading-relaxed" data-testid="text-question">
                {question.question}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <RadioGroup
                value={selectedAnswer?.toString()}
                onValueChange={(value) => setSelectedAnswer(parseInt(value))}
                className="space-y-3"
              >
                {question.options.map((option, index) => (
                  <div 
                    key={index}
                    className={`relative flex items-center space-x-3 rounded-lg border p-4 cursor-pointer transition-all
                      ${selectedAnswer === index 
                        ? "border-primary bg-primary/5" 
                        : "hover:bg-muted/50"
                      }`}
                    onClick={() => setSelectedAnswer(index)}
                    data-testid={`option-${index}`}
                  >
                    <RadioGroupItem 
                      value={index.toString()} 
                      id={`option-${index}`}
                      className="shrink-0"
                    />
                    <Label 
                      htmlFor={`option-${index}`} 
                      className="flex-1 cursor-pointer text-base"
                    >
                      {option}
                    </Label>
                    {selectedAnswer === index && (
                      <CheckCircle className="h-5 w-5 text-primary shrink-0" />
                    )}
                  </div>
                ))}
              </RadioGroup>
            </CardContent>
          </Card>

          {/* Question Navigation */}
          <div className="flex items-center justify-center gap-2 mb-8">
            {questions.map((_, index) => (
              <div 
                key={index}
                className={`w-3 h-3 rounded-full transition-all ${
                  index === currentQuestion 
                    ? "bg-primary w-6" 
                    : index < currentQuestion 
                      ? "bg-primary/50" 
                      : "bg-muted"
                }`}
              />
            ))}
          </div>

          {/* Navigation Buttons */}
          <div className="flex flex-col sm:flex-row gap-4 justify-between">
            <Button 
              variant="outline" 
              onClick={handlePrevious}
              disabled={currentQuestion === 0}
              className="gap-2"
              data-testid="button-previous-question"
            >
              <ArrowLeft className="h-4 w-4" />
              Previous
            </Button>
            
            <Button 
              onClick={handleNext}
              disabled={selectedAnswer === null || submitQuizMutation.isPending}
              className="gap-2"
              data-testid="button-submit-answer"
            >
              {submitQuizMutation.isPending ? (
                <>
                  <Loader2 className="h-4 w-4 animate-spin" />
                  Submitting...
                </>
              ) : isLastQuestion ? (
                <>
                  Submit Quiz
                  <CheckCircle className="h-4 w-4" />
                </>
              ) : (
                <>
                  Next Question
                  <ArrowRight className="h-4 w-4" />
                </>
              )}
            </Button>
          </div>
        </div>
      </div>
    </div>
  );
}
