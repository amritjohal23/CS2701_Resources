import { useState } from "react";
import { Link, useParams } from "wouter";
import { useQuery } from "@tanstack/react-query";
import { 
  ArrowRight, 
  ArrowLeft,
  Play,
  CheckCircle,
  BookOpen,
  Lightbulb,
  ChevronDown,
  ChevronUp
} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { Progress } from "@/components/ui/progress";
import { Collapsible, CollapsibleContent, CollapsibleTrigger } from "@/components/ui/collapsible";
import { Skeleton } from "@/components/ui/skeleton";
import type { Module } from "@shared/schema";

export default function ModuleLesson() {
  const { id } = useParams<{ id: string }>();
  const [completedSections, setCompletedSections] = useState<Set<number>>(new Set());
  const [expandedSection, setExpandedSection] = useState<number>(0);

  const { data: module, isLoading, error } = useQuery<Module>({
    queryKey: ["/api/modules", id],
    queryFn: async () => {
      const res = await fetch(`/api/modules/${id}`);
      if (!res.ok) throw new Error("Failed to fetch module");
      return res.json();
    },
    enabled: !!id
  });

  if (isLoading) {
    return (
      <div className="min-h-screen bg-background">
        <div className="sticky top-0 z-40 bg-background border-b">
          <div className="container mx-auto px-4 py-3">
            <div className="flex items-center justify-between gap-4">
              <Skeleton className="h-8 w-24" />
              <Skeleton className="h-4 w-64" />
              <Skeleton className="h-8 w-24" />
            </div>
          </div>
        </div>
        <div className="container mx-auto px-4 py-8">
          <div className="max-w-4xl mx-auto">
            <Skeleton className="h-10 w-64 mb-4" />
            <Skeleton className="h-6 w-full max-w-xl mb-8" />
            <Skeleton className="aspect-video w-full mb-8" />
            {Array.from({ length: 3 }).map((_, i) => (
              <Skeleton key={i} className="h-24 w-full mb-4" />
            ))}
          </div>
        </div>
      </div>
    );
  }

  if (error || !module) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <Card className="p-8 text-center">
          <CardTitle className="mb-4 text-destructive">Lesson Not Found</CardTitle>
          <CardDescription className="mb-6">
            The lesson you're looking for doesn't exist or couldn't be loaded.
          </CardDescription>
          <Link href="/modules">
            <Button>Back to Modules</Button>
          </Link>
        </Card>
      </div>
    );
  }

  const sections = module.lessonContent?.sections ?? [];
  const progress = sections.length > 0 ? (completedSections.size / sections.length) * 100 : 0;
  const allSectionsComplete = sections.length > 0 && completedSections.size === sections.length;

  const markComplete = (index: number) => {
    setCompletedSections(prev => {
      const newSet = new Set(prev);
      newSet.add(index);
      return newSet;
    });
    if (index < sections.length - 1) {
      setExpandedSection(index + 1);
    }
  };

  return (
    <div className="min-h-screen bg-background">
      {/* Progress Header */}
      <div className="sticky top-0 z-40 bg-background border-b">
        <div className="container mx-auto px-4 py-3">
          <div className="flex items-center justify-between gap-4">
            <Link href={`/module/${module.id}/introduction`}>
              <Button variant="ghost" size="sm" className="gap-2" data-testid="button-back-to-intro">
                <ArrowLeft className="h-4 w-4" />
                <span className="hidden sm:inline">Introduction</span>
              </Button>
            </Link>
            
            <div className="flex-1 max-w-md">
              <div className="flex justify-between text-sm mb-1">
                <span className="text-muted-foreground">Lesson Progress</span>
                <span className="font-medium">{Math.round(progress)}%</span>
              </div>
              <Progress value={progress} className="h-2" />
            </div>

            <Link href={`/module/${module.id}/quiz`}>
              <Button 
                size="sm" 
                className="gap-2" 
                disabled={!allSectionsComplete}
                data-testid="button-take-quiz"
              >
                Take Quiz
                <ArrowRight className="h-4 w-4" />
              </Button>
            </Link>
          </div>
        </div>
      </div>

      <div className="container mx-auto px-4 py-8">
        <div className="max-w-4xl mx-auto">
          {/* Module Title */}
          <div className="mb-8">
            <h1 className="text-3xl font-bold mb-2">{module.title}</h1>
            <p className="text-muted-foreground">{module.description}</p>
          </div>

          {/* Video Section */}
          {module.lessonContent?.videoUrl && (
            <Card className="mb-8 overflow-hidden">
              <div className="aspect-video bg-muted relative">
                <iframe
                  src={module.lessonContent.videoUrl}
                  className="absolute inset-0 w-full h-full"
                  title={`${module.title} video lesson`}
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowFullScreen
                />
              </div>
              <CardContent className="p-4 bg-card">
                <div className="flex items-center gap-2 text-sm text-muted-foreground">
                  <Play className="h-4 w-4" />
                  <span>Watch the video lesson above, then read through the content sections below.</span>
                </div>
              </CardContent>
            </Card>
          )}

          {/* Content Sections */}
          {sections.length > 0 ? (
            <div className="space-y-4">
              {sections.map((section, index) => (
                <Card 
                  key={index} 
                  className={`transition-all ${completedSections.has(index) ? "border-primary/50" : ""}`}
                  data-testid={`section-${index + 1}`}
                >
                  <Collapsible
                    open={expandedSection === index}
                    onOpenChange={() => setExpandedSection(expandedSection === index ? -1 : index)}
                  >
                    <CollapsibleTrigger className="w-full">
                      <div className="flex items-center justify-between p-4 cursor-pointer hover-elevate rounded-t-lg">
                        <div className="flex items-center gap-4">
                          <div className={`w-10 h-10 rounded-full flex items-center justify-center shrink-0 ${
                            completedSections.has(index) 
                              ? "bg-primary text-primary-foreground" 
                              : "bg-muted text-muted-foreground"
                          }`}>
                            {completedSections.has(index) ? (
                              <CheckCircle className="h-5 w-5" />
                            ) : (
                              <span className="font-bold">{index + 1}</span>
                            )}
                          </div>
                          <div className="text-left">
                            <h3 className="font-semibold text-lg">{section.title}</h3>
                            {completedSections.has(index) && (
                              <span className="text-sm text-primary">Completed</span>
                            )}
                          </div>
                        </div>
                        {expandedSection === index ? (
                          <ChevronUp className="h-5 w-5 text-muted-foreground" />
                        ) : (
                          <ChevronDown className="h-5 w-5 text-muted-foreground" />
                        )}
                      </div>
                    </CollapsibleTrigger>

                    <CollapsibleContent>
                      <CardContent className="pt-0 pb-6 px-6">
                        <div className="pl-14">
                          {/* Main Content */}
                          <div className="prose prose-sm dark:prose-invert max-w-none mb-6">
                            {section.content.split('\n\n').map((paragraph, pIndex) => (
                              <p key={pIndex} className="mb-4 text-foreground leading-relaxed whitespace-pre-line">
                                {paragraph}
                              </p>
                            ))}
                          </div>

                          {/* Key Points */}
                          {section.keyPoints && section.keyPoints.length > 0 && (
                            <div className="bg-primary/5 border border-primary/20 rounded-lg p-4 mb-6">
                              <div className="flex items-center gap-2 mb-3">
                                <Lightbulb className="h-5 w-5 text-primary" />
                                <span className="font-semibold text-primary">Key Takeaways</span>
                              </div>
                              <ul className="space-y-2">
                                {section.keyPoints.map((point, pIndex) => (
                                  <li key={pIndex} className="flex items-start gap-2 text-sm">
                                    <CheckCircle className="h-4 w-4 text-primary shrink-0 mt-0.5" />
                                    <span>{point}</span>
                                  </li>
                                ))}
                              </ul>
                            </div>
                          )}

                          {/* Mark Complete Button */}
                          {!completedSections.has(index) && (
                            <Button 
                              onClick={() => markComplete(index)}
                              className="gap-2"
                              data-testid={`button-complete-section-${index + 1}`}
                            >
                              <CheckCircle className="h-4 w-4" />
                              Mark as Complete
                            </Button>
                          )}
                        </div>
                      </CardContent>
                    </CollapsibleContent>
                  </Collapsible>
                </Card>
              ))}
            </div>
          ) : (
            <Card className="p-8 text-center">
              <BookOpen className="h-12 w-12 mx-auto text-muted-foreground mb-4" />
              <p className="text-muted-foreground">No lesson content available for this module yet.</p>
            </Card>
          )}

          {/* Navigation */}
          <div className="mt-12 flex flex-col sm:flex-row gap-4 justify-between">
            <Link href={`/module/${module.id}/introduction`}>
              <Button variant="outline" className="gap-2 w-full sm:w-auto">
                <ArrowLeft className="h-4 w-4" />
                Back to Introduction
              </Button>
            </Link>
            
            <Link href={`/module/${module.id}/quiz`}>
              <Button 
                className="gap-2 w-full sm:w-auto" 
                disabled={!allSectionsComplete}
                data-testid="button-continue-to-quiz"
              >
                {allSectionsComplete ? (
                  <>
                    Continue to Quiz
                    <ArrowRight className="h-4 w-4" />
                  </>
                ) : (
                  <>
                    <BookOpen className="h-4 w-4" />
                    Complete All Sections First
                  </>
                )}
              </Button>
            </Link>
          </div>
        </div>
      </div>
    </div>
  );
}
